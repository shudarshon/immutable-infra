{
  "variables": {
    "region": "us-east-1",
    "source_ami": "ami-afd15ed0",
    "instance_type": "t2.medium",
    "ssh_username": "ec2-user"
  },
  "builders": [
    {
      "ami_name": "Amazon Linux  - WP2 {{timestamp}}",
      "ami_description": "An Amazon Linux AMI that is supposed to be a Golden AMI",
      "instance_type": "{{user `instance_type`}}",
      "region": "{{user `region`}}",
      "type": "amazon-ebs",
      "ssh_timeout": "3m",
      "ssh_username": "{{user `ssh_username`}}",
      "ssh_pty": "true",
      "associate_public_ip_address": "True",
      "source_ami": "{{user `source_ami`}}",
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "architecture": "x86_64",
          "block-device-mapping.volume-type": "gp2",
          "root-device-type": "ebs"
        },
        "most_recent": true
      },
      "tags": {
        "Name": "RHEL-WP - {{timestamp}}",
        "CreationDate": "{{timestamp}}",
        "Builder": "Packer",
        "OS_Version": "RHEL",
        "Release": "Amazon Linux"
      }
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "script": "./packer/scripts/bootstrap"
    },
    {
      "type": "ansible-local",
      "playbook_file": "./ansible/play.yml",
      "playbook_dir": "./ansible",
      "role_paths": [
        "./ansible/roles/java8",
        "./ansible/roles/tomcat",
        "./ansible/roles/nginx"
      ]
    }
  ]
}
